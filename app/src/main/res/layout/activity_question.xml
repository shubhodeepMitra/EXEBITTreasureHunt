<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="in.ac.nie.www.exebit.question">


    <!--
        mitra00:
           This layout is for the header which shows the number of question
           solved and the time left.
            -->
    <RelativeLayout
        android:id="@+id/headerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <!--
        mitra00:
            This shows the number of questions solved
            -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="#1de9b6">

            <TextView
                android:id="@+id/currentQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:textColor="#000000"
                android:textSize="25dp"
                android:text="12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/currentQ"
                android:textColor="#000000"
                android:textSize="25dp"
                android:text=" | 20" />
        </RelativeLayout>

        <!--
        mitra00:
            This shows the time left
            -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"



            android:textColor="#000000"

            >



            <TextView
                android:id="@+id/time_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="#f44336"
                android:textColor="#000000"
                android:padding="5dp"
                android:textSize="25dp"
                android:text=" | 20" />

            <TextView
                android:id="@+id/time_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/time_sec"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:background="#f44336"
                android:textColor="#000000"

                android:textSize="25dp"
                android:text="12" />
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerInfo"
        android:layout_marginTop="30dp"
        android:textColor="#FFFF"
        android:textSize="30dp"
        android:text="@string/ques1" />

    <EditText
        android:id="@+id/answer"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"

        android:backgroundTint="#1de9b6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/qr"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Submit"
            android:layout_alignParentLeft="true"
            android:textAllCaps="true"
            android:background="#1de9b6"
            android:textColor="#000000" />
        <Button
            android:id="@+id/scan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="scan"
            android:textAllCaps="true"
            android:layout_alignParentRight="true"
            android:background="#1de9b6"
            android:textColor="#000000" />

    </RelativeLayout>

</RelativeLayout>